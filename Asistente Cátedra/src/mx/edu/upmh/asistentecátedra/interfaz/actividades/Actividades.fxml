                  <Button mnemonicParsing="false" text="3" />
               </children>
            </VBox>
         </left>
         <center>
            <ScrollPane BorderPane.alignment="CENTER">
               <content>
                  <TableView>
                    <columns>
                      <TableColumn prefWidth="75.0" text="Matricula" />
                      <TableColumn prefWidth="75.0" text="Nombre" />
                    </columns>
                  </TableView>
               </content>
            </ScrollPane>
         </center>
         <right>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="+" />
               </children>
            </VBox>
         </right>
      </BorderPane>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Actividad">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField promptText="Nombre de la actividad" />
                        <TextArea prefHeight="200.0" prefWidth="200.0" promptText="DescripciÃ³n de la actividad" />
                     </children>
                  </VBox>
               </content>
            </Tab>
          <Tab text="Entregas">
               <content>
                  <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ListView prefHeight="200.0" prefWidth="200.0" />
                        <Button fx:id="btnNuevoMiembro" alignment="CENTER" mnemonicParsing="false" text="+" textAlignment="CENTER" />
                        <FlowPane />
                        <TextArea promptText="Observaciones" />
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</HBox>
