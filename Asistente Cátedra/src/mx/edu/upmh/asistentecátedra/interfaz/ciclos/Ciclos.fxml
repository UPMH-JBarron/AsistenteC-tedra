<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.upmh.asistentecátedra.interfaz.ciclos.SecciónCiclos">
   <center>
      <VBox fx:id="panelCiclos" alignment="CENTER" minHeight="150.0" minWidth="450.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox fx:id="panelAcciones" styleClass="panelLateral" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnNuevoCiclo" contentDisplay="TOP" mnemonicParsing="false" text="Nuevo Ciclo">
               <styleClass>
                  <String fx:value="accion" />
                  <String fx:value="agregar" />
               </styleClass></Button>
         </children>
      </VBox>
   </right>
   <left>
      <VBox styleClass="panelLateral" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton fx:id="btnAuto" mnemonicParsing="false" styleClass="opcion" text="Entrada automática" textAlignment="CENTER" />
         </children>
      </VBox>
   </left>
</BorderPane>
